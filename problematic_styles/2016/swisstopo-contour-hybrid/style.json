{
	"name": "Swisstopo Contour Hybrid",
	"version": 8,
	"sprite": "https://sbitileserver.smm-admin.ch:8135/styles/swisstopo-maxi-v9-hybrid/sprite",
	"glyphs": "https://sbitileserver.smm-admin.ch:8135/fonts/{fontstack}/{range}.pbf",
	"sources": {
		"contour": {
			"type": "vector",
			"url": "mbtiles://DKM10_HOEHENKURVEN.mbtiles"
		},
		"DKM10_GEWAESSER_PLY": {
			"type": "vector",
			"url": "mbtiles://DKM10_GEWAESSER_PLY.mbtiles"
		},
		"swissimageWMTS": {
			"type": "raster",
			"url": "local://tilejson/swissimage.json",
			"tileSize": 256
		}
	},
	"layers": [{
		"id": "swissimage",
		"type": "raster",
		"source": "swissimageWMTS",
		"paint": {
			"raster-opacity": 0.8 
		}
	}, {
		"id": "water",
		"type": "fill",
		"interactive": false,
		"source": "DKM10_GEWAESSER_PLY",
		"source-layer": "DKM10_GEWAESSER_PLYgeojson",
		"minzoom": 6,
		"layout": {},
		"paint": {
			"fill-color": "hsl(196, 80%, 70%)",
			"fill-outline-color": "hsla(196, 80%, 70%, 0)",
			"fill-opacity": {
				"stops": [
					[5, 0.2],
					[7, 0.5]
				]
			}
		}
	}, {
		"id": "ContourLinesD",
		"type": "line",
		"source": "contour",
		"source-layer": "DKM10_HOEHENKURVENgeojson",
		"minzoom": 12,
		"interactive": true,
		"filter": ["==", "KATEGORIE", "20"],
		"layout": {
			"line-cap": "round",
			"line-join": "round",
			"visibility": "visible"
		},
		"paint": {
			"line-width": {
				"stops": [
					[12, 0.4],
					[15, 1.0],
					[19, 2]
				]
			},
			"line-color": {
				"property": "OBERFLAECHE",
				"stops": [
					[100, "#333333"],
					[200, "#888888"],
					[300, "#4d94ff"],
					[400, "#179ecf"],
					[500, "#964810"]
				]
			},
			"line-opacity": {
				"stops": [
					[12, 0.4],
					[14, 0.8]
				]
			},
			"line-blur": 0.1
		}
	}, {
		"id": "ContourLinesC",
		"type": "line",
		"source": "contour",
		"source-layer": "DKM10_HOEHENKURVENgeojson",
		"minzoom": 10,
		"interactive": true,
		"filter": ["==", "KATEGORIE", "100"],
		"layout": {
			"line-cap": "round",
			"line-join": "round",
			"visibility": "visible"
		},
		"paint": {
			"line-width": {
				"stops": [
					[10, 0.8],
					[15, 1.6],
					[19, 2.5]
				]
			},
			"line-opacity": {
				"stops": [
					[10, 0.2],
					[12, 0.8]
				]
			},
			"line-color": {
				"property": "OBERFLAECHE",
				"stops": [
					[100, "#333333"],
					[200, "#888888"],
					[300, "#4d94ff"],
					[400, "#179ecf"],
					[500, "#964810"]
				]
			},
			"line-blur": 0.1
		}
	}, {
		"id": "ContourLinesB",
		"type": "line",
		"source": "contour",
		"source-layer": "DKM10_HOEHENKURVENgeojson",
		"minzoom": 8,
		"interactive": true,
		"filter": ["==", "KATEGORIE", "200"],
		"layout": {
			"line-cap": "round",
			"line-join": "round",
			"visibility": "visible"
		},
		"paint": {
			"line-width": {
				"stops": [
					[8, 0.6],
					[10, 1.0],
					[13, 1.5],
					[17, 3.0]
				]
			},
			"line-opacity": {
				"stops": [
					[8, 0.3],
					[12, 0.8]
				]
			},
			"line-color": {
				"property": "OBERFLAECHE",
				"stops": [
					[100, "#333333"],
					[200, "#888888"],
					[300, "#4d94ff"],
					[400, "#179ecf"],
					[500, "#964810"]
				]
			},
			"line-blur": 0.1
		}
	}, {
		"id": "ContourLinesA",
		"type": "line",
		"source": "contour",
		"source-layer": "DKM10_HOEHENKURVENgeojson",
		"minzoom": 8,
		"interactive": true,
		"filter": ["==", "KATEGORIE", "1000"],
		"layout": {
			"line-cap": "round",
			"line-join": "round",
			"visibility": "visible"
		},
		"paint": {
			"line-width": {
				"stops": [
					[8, 0.8],
					[10, 1.2],
					[13, 2.0],
					[17, 4.0]
				]
			},
			"line-opacity": {
				"stops": [
					[8, 0.1],
					[10, 0.3],
					[12, 0.8]
				]
			},
			"line-color": {
				"property": "OBERFLAECHE",
				"stops": [
					[100, "#333333"],
					[200, "#888888"],
					[300, "#4d94ff"],
					[400, "#179ecf"],
					[500, "#964810"]
				]
			},
			"line-blur": 0.1
		}
	}, {
		"id": "ContourLinesBLabel",
		"type": "symbol",
		"source": "contour",
		"source-layer": "DKM10_HOEHENKURVENgeojson",
		"minzoom": 13,
		"interactive": true,
                "filter":  [ "all",
                  ["==", "KATEGORIE", "100"],
                  ["==", "OBERFLAECHE", 500]
                ],
		"layout": {
			"symbol-placement": "line",
			"symbol-spacing": 200,
			"text-size": {
				"stops": [
					[13, 7],
					[15, 13],
					[18, 16]
				]
			},
			"text-field": "{HOEHE}",
			"text-letter-spacing": 0.1,
			"text-allow-overlap": false,
			"text-ignore-placement": false,
			"text-max-angle": 45,
			"text-font": ["Frutiger Neue LT Pro Condensed Bold"],
			"text-offset": [0, 0.2],
			"text-rotation-alignment": "map",
			"text-keep-upright": true,
			"text-anchor": "center"

		},
		"paint": {
			"text-color": {
				"property": "OBERFLAECHE",
				"stops": [
					[100, "#333333"],
					[200, "#888888"],
					[300, "#4d94ff"],
					[400, "#179ecf"],
					[500, "#964810"]
				]
			},

			"text-halo-color": "#ffffff",
			"text-halo-width": 1,
			"text-halo-blur": 0.2
		}
	}, {
	"id": "ContourLinesALabel",
		"type": "symbol",
		"source": "contour",
		"source-layer": "DKM10_HOEHENKURVENgeojson",
		"minzoom": 11,
		"interactive": true,
                "filter":  [ "all",
                  ["==", "KATEGORIE", "1000"],
                  ["==", "OBERFLAECHE", 500]
                ],
		"layout": {
			"symbol-placement": "line",
			"symbol-spacing": 200,
			"text-size": {
				"stops": [
					[11, 8],
					[13, 14],
					[18, 16]
				]
			},
			"text-field": "{HOEHE}",
			"text-letter-spacing": 0.1,
			"text-allow-overlap": true,
			"text-ignore-placement": false,
			"text-max-angle": 45,
			"text-font": ["Frutiger Neue LT Pro Condensed Bold"],
			"text-offset": [0, 0.2],
			"text-rotation-alignment": "map",
			"text-keep-upright": true,
			"text-anchor": "center"
		},
		"paint": {
			"text-color": {
				"property": "OBERFLAECHE",
				"stops": [
					[100, "#333333"],
					[200, "#888888"],
					[300, "#4d94ff"],
					[400, "#179ecf"],
					[500, "#964810"]
				]
			},
			"text-halo-color": "#ffffff",
			"text-halo-width": 1,
			"text-halo-blur": 0.2
		}
	}]
}
